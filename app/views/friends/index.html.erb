<% if user_signed_in? %>

<h1 class="my-3">Friends List</h1>

<table class="table table-striped table-success table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>E-Mail</th>
      <th>Phone</th>
      <th>User ID</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.user_id %></td>

        <td><%= link_to "Edit", edit_friend_path(friend), class:"btn btn-sm btn-primary" %></td>
        <td><%= button_to friend_path(friend), method: :delete, class:"btn btn-sm btn-danger" do %>
          Delete
        <% end %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
    
<br>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>

<h1>Hello</h1>
<h3>You're not signed in yet</h3>

<% end %>